
body
  padding-top: 60px;
  padding-bottom: 40px;

img
  image-rendering optimizeQuality
  -ms-interpolation-mode bicubic

.forkme
  position absolute
  top 51px
  left 0

@media(min-width:980px)
  .forkme
    position absolute
    top 40px
    left 0

.beta
  background-image url('/img/beta.png')
  background-repeat no-repeat
  background-position top right
  background-size 15%

.slide
  border 2px #ccc solid
  margin 10px
  padding 30px
  border-radius 3px
  box-shadow 5px 5px 15px #975
  height 600px

div.cenovka
  background-image url('/img/service-arrow.png')
  background-repeat no-repeat
  background-position left bottom
  padding-left 80px


a.external::after
  font-family: FontAwesome;
  content: "\f08e";
  font-size 66%
  vertical-align top
  padding-left 2pt
  text-decoration none !important

// restore reseted value
input[type="search"]::-webkit-search-cancel-button
  -webkit-appearance:searchfield-cancel-button

input[type="search"]::-webkit-search-decoration 
  -webkit-appearance:searchfield-results-button

code
  color inherit
  border none

.navbar
  font-size 133%

  a.brand
    padding-top 0
    padding-bottom 0
    opacity 0.6 // #fff -> #999

    &.brand:hover
      opacity 1

.foto
  margin-right 10px
  //background-color #fff
  //padding 10px
  //background: linear-gradient(top, #fff, #aaa);

.btn-skype
  padding 4px 13px;

.center
  text-align center

.well
  h1, h2, h3
    text-shadow 1px 1px 0px #fff, 2px 2px 0px #ddd

span.cena
  font-size 166%

blockquote
  &:before
    font-family 'Times New Roman',Times,Georgia,'Liberation Serif',serif,sans-serif,'Lucida Sans Unicode'
    content '“'
    float left
    color #ddd
    font-size 80px
    position relative
    top 20px
    left -7px

  cite
    display block
    font-style italic
    text-align right
    color #777

    &:before
      content '— '
      color #999

    a
      color #777
      &:hover
        text-decoration none



#main.hero-unit h1
  padding-bottom 10px


@media all and (min-width: 500px) {
  #main.hero-unit {
    background-image url('/img/main-woman.png')
    background-repeat no-repeat
    background-position right bottom
    background-size 130px
    padding-right 140px
  }

  #skoleni {
    background-image url('/img/service-education.png')
    background-repeat no-repeat
    background-position right bottom
    background-size 130px
    padding-right 140px
  }
}

@media all and (max-width: 500px) {
  #main.hero-unit h1 {
    font-size 40px
  }

  #main.hero-unit {
    background-image url('/img/main-woman.png')
    background-repeat no-repeat
    background-position right bottom
    background-size 80px
    padding 20px 85px 20px 20px
  }

  #skoleni {
    background-image url('/img/service-education.png')
    background-repeat no-repeat
    background-position right bottom
    background-size 80px
    padding 20px 85px 20px 20px
  }
}

