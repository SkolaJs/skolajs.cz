#registrace.row
  .span5
    form.beta.form-horizontal(action='/registrace', method='POST')
      legend Registrace <small>a obnoven√≠ hesla</small>
      +csrf
      .error
        if locals.registerError
          p.text-error= registerError
      div.control-group
        label.control-label(for="regEmail") Email
        div.controls
          .input-prepend
            span.add-on: i.icon-envelope
            input#regEmail(name='regEmail', type="email", placeholder="email", value=body.regEmail, required)
      div.control-group
        div.controls
          +submit('Registrace')
